<!DOCTYPE html>
<html>
<head>
  <title>Your Folders</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="app-container">
    <header>
      <h1 class="app-title">FileUploader</h1>
      <nav>
        <form action="/logout" method="POST" style="display:inline;">
          <button type="submit" class="btn logout-btn">Logout</button>
        </form>
      </nav>
    </header>

    <main class="content">
      <h1>Your Folders</h1>

      <h2>Create Folder</h2>
      <form action="/folders" method="POST">
        <input type="text" name="name" placeholder="Folder name" required />
        <button type="submit" class="btn view-btn">Create</button>
      </form>

      <h2>Folders</h2>
      <ul class="folder-list">
        <% folders.forEach(folder => { %>
          <li class="folder-card">
            <div class="folder-icon">ğŸ“</div>
            <div class="folder-info">
              <a href="/folders/<%= folder.id %>"><%= folder.name %></a>
            </div>
            <div class="folder-actions">
              <form action="/folders/<%= folder.id %>/delete" method="POST">
                <button type="submit" class="btn delete-btn">Delete</button>
              </form>
            </div>
          </li>
        <% }) %>
      </ul>
    </main>

    <footer>
      <p>Â© 2025 FileUploader App</p>
    </footer>
  </div>
</body>
</html>
